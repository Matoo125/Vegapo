{% extends "admin/base.twig" %}

{% block title %}VegaPo - Edits {% endblock %}

{% block header %} Edits {% endblock %}

{% block content %}
<style type="text/css">
      ins { background-color: LIGHTGREEN; }
      del { background-color: LIGHTCORAL; }
 </style>

<section id="main">
    <div class="container">
        <div class="row">
          <div class="col-lg-8 offset-lg-2 text-left">
            <h1>Edit #{{ data['id'] }} {{ data['state'] }} - by {{ data['user_id']}}</h1>
          </div>
          <div class="col-lg-10 offset-lg-1 text-left">
            <p>Komentar:</p>
            <p>{{ data['comment'] }}<p>
          </div>
          <div class="col-lg-10 offset-lg-1 text-left">
            <p>Zmeny:</p>
            {{ data['diff']|raw }}
          </div>
      </div>
  </div>
</section>
{% endblock %}
