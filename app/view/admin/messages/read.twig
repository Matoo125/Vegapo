{% extends "admin/base.twig" %}

{% block title %}VegaPo - {{ lang.MESSAGE }} {% endblock %}

{% block header %} {{ lang.MESSAGE }} {% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-4">
            <p>Author: {{ message.author }}</p>
            <p>Subject: {{ message.subject }}</p>
            <p>Email: {{ message.email }}</p>
            <p>Received at: {{ message.created_at }}</p>
        </div>

        <div class="col-md-4">
            {{ message.message }}



        <hr>
        {% if message.type == 0 %} 
            <form action="/admin/messages/answer" method="post">

                <div class="form-group">
                    <textarea class="form-control" name="answer"></textarea>
                </div>
                <input type="hidden" name="subject" value="{{ message.subject }}">
                <input type="hidden" name="author" value="{{ message.author }}">
                <input type="hidden" name="email" value="{{ message.email }}">
                <input type="hidden" name="message" value="{{ message.message }}">
                <input type="hidden" name="message_id" value="{{ message.id }}">
                <button type="submit" class="btn btn-primary">Answer</button>
            </form>

        {% else %}
            <p>This message has been answered by: {{ answer.username }}</p>
            <p>At: {{ answer.created_at }}</p>
            <hr>
            <p>{{ answer.message }}</p>
        {% endif %}


        </div>

    </div>


{% endblock %}