{% extends "public/base.twig" %}

{% block title %} {{ lang.SUPERMARKETS }} {% endblock %}

{% block content %}

<section>
	<div class="container">
		<div class="wow fadeInUp text-center"><h2>{{ lang.SUPERMARKETS }}</h2></div> <br>
		   <div class="card-deck">
            {% for store in stores %}
            <!-- card -->
            <div class="card">
                <img class="card-img-top img-fluid" src={{ store.image != "none" ? "/uploads/supermarkets/#{store.image}-thumb450x450" : "http://placehold.jp/450x450.png"}}>
                <div class="card-block">
                    <p class="card-title">{{ store.name }}</p>

                </div>
            </div>
        {% endfor %}
        </div>
	</div>
</section>


{% endblock %}
