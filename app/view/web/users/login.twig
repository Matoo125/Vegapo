{% extends "base.twig" %} 

{% block title %} 
  VegaPo - {{ lang.LOGIN }} 
{% endblock %} 

{% block content %}
<header id="main">
  <div class="container">
    <div class="inner">
      {{ include('modules/flash.twig') }}
      <div class="row">
        <div class="col-md-12">
          <h1>{{ lang.LOGIN }}</h1>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-12">
          <form action="/users/login" 
                method="post">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label" 
                     for="loginEmail">
                {{ lang.EMAIL }}
              </label>
              <div class="col-sm-8">
                <input type="email" 
                       class="form-control" 
                       autofocus 
                       required 
                       id="loginEmail" 
                       name="loginEmail" 
                       aria-describedby="emailHelp" 
                       placeholder="{{ lang.LOGIN_EMAIL }}">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-3 col-form-label" 
                     for="loginPassword">
                {{ lang.PASSWORD }}
              </label>
              <div class="col-sm-8">
                <input type="password" 
                       class="form-control" 
                       id="loginPassword" 
                       name="loginPassword" 
                       placeholder="{{ lang.YOUR_PASSWORD}}" 
                       required>
              </div>
            </div>
            <div class="form-check">
              <label class="form-check-label">
              <input type="checkbox" 
                     name="remember-me" 
                     class="form-check-input">
              Remember me
              </label>
            </div>
            <br>
            <div class="row">
              <div class="col-12">
                <button type="submit" 
                        class="btn btn-primary">
                  {{ lang.SUBMIT }}
                </button>
                <a class="btn btn-primary" 
                   href="{{ fbLoginUrl('fb_login_callback') }}">
                   {{ lang.FACEBOOK_LOGIN }}
                 </a>
              </div>
              <div class="col-4 offset-8">
                <a href="/users/forgotten_password" class="text-muted">
                  {{ lang.FORGOTTEN_PASSWORD }}
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</header>
{% endblock %}