{% extends "web/base.twig" %}

{% block title %} VegaPo - {{ lang.TAGS }} {% endblock %}

{% block content %}

<section>
	<div class="container">
		<div class="wow fadeInUp text-center"><h2>{{ lang.TAGS }}</h2></div> <br>
		   <div class="row">
            {% for tag in tags %}
            <!-- card -->
            <div class="col-xs-6 col-sm-4 col-lg-3">
                <a href="/produkty?tag={{ tag.slug }}">
                <img class="card-img-top img-fluid" src={{ tag.image != "none" ? "/uploads/tags/#{tag.image}-thumb450x450" : "http://placehold.jp/450x450.png"}}>
                <div class="card-block">
                    <p class="card-title">{{ tag.name }}</p>

                </div>
                </a>
            </div>
        {% endfor %}
        </div>
	</div>
</section>


{% endblock %}