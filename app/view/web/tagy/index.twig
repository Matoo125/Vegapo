{% extends "base.twig" %}

{% block title %} VegaPo - {{ lang.TAGS }} {% endblock %}

{% block content %}

<section id="main">
  <div class="container">
    <div class="wow fadeInUp text-center">
      <h2>
        {{ lang.TAGS }}
      </h2>
    </div> 

    <br>

       <div class="row">
      {% for tag in tags %}
      <!-- card -->
      <div class="col-xs-6 col-sm-4 col-lg-3">
        <a href="/produkty?tag={{ tag.slug }}">
        <img class="card-img-top img-fluid" 
             src={{ tag.image != "none" ? "/uploads/tags/450x450/#{tag.image}" : "http://placehold.jp/450x450.png"}}>
        <div class="card-body">
          <p class="card-title">
            {{ tag.name }}
          </p>

        </div>
        </a>
      </div>
    {% endfor %}
    </div>
  </div>
</section>


{% endblock %}