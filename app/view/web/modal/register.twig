

<div id="registerModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center">
              <br>  <h2 class="text-center">{{ lang.REGISTER }}</h2>
                <hr>
                 <form action="/users/register" method="post">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="username">{{ lang.USERNAME }}</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" autofocus required id="username" name="username" placeholder="Užívatelské meno">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="email">{{ lang.EMAIL }}</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" autofocus required id="email" name="email" placeholder="Email adresa">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="password1">{{ lang.PASSWORD }}</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="password1" name="password1" placeholder="Heslo" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="password2">{{ lang.PASSWORD }}</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="password2" name="password2" placeholder="Kontrola hesla" required>
                        </div>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">{{ lang.SUBMIT }}</button>
                </form>
        <br>
              
            </div>
        </div>
    </div>
</div>